<div class="background">
    <div>
        <div>
            <h2>Monitoreo de Usuarios</h2>
        </div>
        <div class="userContainer">
            <div class="userHeaders">
                <div>
                    <h3>Nombre</h3>
                </div>
                <div>
                    <h3>Roll</h3>
                </div>
                <div class="deleteContainer">
                    <h3>Eliminar Usuario</h3>
                </div>
            </div>
            {{#each usuarios}}
                <div class="userRow">
                    <div class="nameContainer">
                        <h3>{{this.first_name}} {{this.last_name}}</h3>
                    </div>
                    <div class="rollContainer">
                        <h3>{{this.roll}}</h3>
                        <form action="../api/users/changeRoll/{{this.email}}" method="post">
                            <select name="roll" id="rollSelect">
                                <option value="user">User</option>
                                <option value="premium">Premium</option>
                                <option value="admin">Admin</option>
                            </select>
                            <button type="submit" id="rollSubmit">Actualizar Roll</button>
                        </form>
                    </div>
                    <form action="../api/users/{{this.email}}" method="post" class="deleteContainer">
                        <button type="submit">X</button>
                    </form>
                </div>
            {{/each}}
        </div>
    </div>
</div>

<script src="/public/js/userMonitoring.js"></script>